doctype html
html
  head
    title wp-connect
    link(rel="stylesheet", href="/stylesheets/style.css")

  body
    h1: a(href=site.URL) !{site.name}
    p.description !{site.description}

    h3 Posts list
    ul
      each post in posts.posts
        li
          h4 #{post.title}
          .excerpt !{post.excerpt}
          .author by <em>!{post.author.nice_name}</em>
        hr

    h3 metas
    div.metas
      each val, name in site.meta.links
        | &nbsp;
        a(href=val) #{name}
        | &nbsp;
